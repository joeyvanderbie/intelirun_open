<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/default_margin">
                <Button
                    android:id="@+id/ble_nuke_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/scan_button_height"
                    android:singleLine="true"
                    android:text="@string/ble_nuke"
                    android:textSize="@dimen/button_font_size"
                    android:gravity="right"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/scan_infinite_button"
                    android:singleLine="true"
                    android:text="@string/scan_infinite"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    android:layout_gravity="bottom|center_horizontal|center_vertical"/>

                <Button
                    android:id="@+id/scan_stop_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scan_button_height"
                    android:singleLine="true"
                    android:text="@string/stop_scanning"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    android:layout_gravity="bottom|center_horizontal|center_vertical" />

</LinearLayout>
